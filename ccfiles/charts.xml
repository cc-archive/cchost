<style>
table.statstable {
  border: 3px solid #559;
  background-color: #DDE;
  margin: 5px;
}

.shead {
  background-color: #559;
  color: white;
  padding: 2px 1px 2px 1px;
  }
</style>

<!-- h1>ccMixter stats (beta)</h1 -->

<table>
<tr>
<td>
<ul>
<li><a href="${root-url}/media/charts">Upload ranks (all-time)</a></li>
<li><a href="${root-url}/media/charts/users">User ranks (all-time)</a></li>
<li><a href="${root-url}/media/charts/users/date">Users latest</a></li>
<li><a href="${root-url}/media/charts/upload/name">Uploads (alphabetical)</a></li>
<li><a href="${root-url}/media/charts/users/name">Users (alphabetical)</a></li>
</ul>
</td>
<td>
  <table tal:condition="user_recs" class="statstable">
    <tr>
      <th>Artist</th>
      <th>Ratings</th>
      <th>remixes</th>
      <th>remixed</th>
      <th>uploads</th>
    </tr>
    <tr tal:repeat="R user_recs">
      <td><a href="${R/artist_page_url}">${R/user_real_name}</a></td>
      <td><metal:block use-macro="charts.xml/ratings_dots" /></td>
      <td>${R/user_num_remixes}</td>
      <td>${R/user_num_remixed}</td>
      <td>${R/user_num_uploads}</td>
    </tr>
  </table>

  <table  tal:condition="upload_recs" class="statstable">
    <tr>
      <th>name</th>
      <th>artist</th>
      <th>ratings</th>
      <th>remixes</th>
      <th>sources</th>
    </tr>
    <tr tal:repeat="R upload_recs">
      <td><a href="${R/artist_page_url}">${R/user_real_name}</a></td>
      <td><a href="${R/file_page_url}">${R/upload_name}</a></td>
      <td style="white-space: nowrap"><metal:block use-macro="charts.xml/ratings_dots" /></td>
      <td>${R/upload_num_remixes}</td>
      <td>${R/upload_num_sources}</td>
    </tr>
  </table>
</td>
</tr>
</table>

<metal:block define-macro="ratings_dots" >
  <tal:block condition="R/ratings_score" repeat="i R/ratings"><img 
    src="${root-url}/ccimages/stars/dot-${i}.gif" height="10" width="10" /></tal:block> 
  <span tal:condition="R/ratings_score">(${R/ratings_score})</span>
</metal:block>

</div>