<metal:block define-macro="publicize" >
<div id="pubintro" tal:condition="PUB/intro" >
  <img tal:condition="PUB/user_avatar_url" src="${PUB/user_avatar_url}" />
  <div>${PUB/intro}</div>
</div>
<div id="pubinstructions">
  <p>${PUB/step1}</p>
</div>
<form id="puboptions_form">
<table id="puboptions1">
<tr tal:repeat="combo PUB/combos">
    <th>${combo/title}<span class="pubhelp" tal:condition="combo/help" tal:content="combo/help" /></th>
    <td>
        <select id="${combo/id}" name="${combo/name}" class="${combo/class}">
            <tal:block repeat="opt combo/opts">
                <option value="${opt/value}" tal:condition="opt/selected" selected="selected">${opt/text}</option>
                <option value="${opt/value}" tal:condition="not: opt/selected" >${opt/text}</option>
            </tal:block>
        </select>
    </td>
</tr>
</table>
<tal:block repeat="hide PUB/hiddens">
  <input type="hidden" value="${hide/value}" name="${hide/name}" id="${hide/name}" />
</tal:block>
<span id="type_target"></span>
</form>

<div id="pubinstructions">
    <p>${PUB/step2}</p>
</div>

<p id="target_text_p">
    <textarea id="target_text" name="target_text">
    </textarea>
</p>

<div id="preview_container">
    <table id="seehtml">
      <tr><td><a href="javascript://toggle preview" id="preview_button_link" class="cc_gen_button">
        <span id="preview_button">${PUB/seehtml}</span></a></td></tr>
    </table>
    <b>${PUB/preview}:</b>
    <p id="preview_warn" style="display:block">${PUB/previewwarn}</p>
    <p id="html_warn" style="display:none">${PUB/htmlwarn}</p>
    <div id="preview_block">
      <div id="preview" style="display:block"><span>&nbsp;</span>
      </div>
      <div id="src_preview" style="display:none;">
      </div>
    </div>
</div>
<script type="text/javascript" src="${root-url}cctemplates/js/publicize.js"></script>
<script>
//<!--
seeHTML = '${PUB/seehtml}';
showFormatted = '${PUB/showformatted}';
username = '${PUB/user_name}';
new ccPublicize('${PUB/user_name}');
//-->
</script>

</metal:block>
</tal:block>