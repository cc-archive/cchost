<metal:block define-macro="access_editor">
<tal:block repeat="g field/access_map">
   <div class="acc_head"><div class="acc_knob" id="acc_knob_${repeat/g/index}">&nbsp;</div>
                   ${repeat/g/key}</div>
   <div class="acc_div" id="acc_group_${repeat/g/index}">
   <table class="acc_table"  cellspacing="0" cellpadding="0">
    <tal:block repeat="m g">
      <tr><td class="acc_url">${m/url}</td><td>${m/opts}</td></tr>
      <tr><td colspan="2" class="acc_desc" >${m/ds}</td></tr>
    </tal:block>
   </table>
   </div>
</tal:block>
<script src="${root-url}cctemplates/access.js"></script>
</metal:block>

