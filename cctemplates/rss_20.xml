  <channel>
    <title>${channel_title}</title>
    <link>${home-url}</link>
    <description>${channel_description}</description>
    <language>en-us</language>

    <pubDate>${rfc822-pub-date}</pubDate>
    <lastBuildDate>${rfc822-build-date}</lastBuildDate>

    <item tal:condition="feed_items" tal:repeat="item feed_items">
      <title>${item/upload_name}</title>
      <link>${item/file_page_url}</link>
      <pubDate>${item/rss_pubdate}</pubDate>
      <dc:author>${item/user_real_name}</dc:author>
      <description>${item/upload_description} </description>
      <content:encoded><![CDATA[${item/upload_description_html}]]></content:encoded>
      <enclosure url="${item/files/0/download_url}" 
          length="${item/files/0/file_rawsize}" type="${item/files/0/file_format_info/mime_type}"/>
      <category tal:repeat="tag_link item/upload_taglinks">${tag_link/tag}</category>
      <guid>${item/file_page_url}</guid>
      <tal:block condition="item/has_parents" repeat="parent item/remix_parents">
        <dc:source resource="${parent/file_page_url}" />
      </tal:block>
      <cc:License rdf:about="${item/license_url}">
	    <tal:block condition="item/license_permits" repeat="pt php:CC_split_tags(${item/license_permits})">
          <cc:permits rdf:resource="http://web.resource.org/cc/${pt}" />
        </tal:block>
        <tal:block condition="item/license_required" repeat="rd php:CC_split_tags(${item/license_required})">
          <cc:permits rdf:resource="http://web.resource.org/cc/${rd}" />
        </tal:block>
        <tal:block condition="item/license_prohibits" repeat="ph php:CC_split_tags(${item/license_prohibits})">
          <cc:prohibits rdf:resource="http://web.resource.org/cc/${ph}" />
        </tal:block>
      </cc:License>
    </item>
  </channel>
</rss>