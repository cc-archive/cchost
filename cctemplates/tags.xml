<metal:block define-macro="taglinks">
    <tal:block repeat="tag tag_array" >
       <a href="${tag/tagurl}" rel="tag" class="cc_tag_link" >${tag/tag}</a><tal:block  
              condition="not: repeat/tag/end" >, </tal:block>
    </tal:block>
</metal:block>

<metal:block define-macro="popular_tags_script"><!-- deprecated script block -->
</metal:block>

<metal:block define-macro="popular_tags">
  <tal:block repeat="tag field/tags">
    <a href="javascript: cc_add_tag('${tag}','${field/target}');" 
       class="cc_tag_link">${tag}</a><tal:block condition="not: repeat/tag/end" >, </tal:block>
  </tal:block>
</metal:block>

<metal:block define-macro="tag_picker">
   <div class="cc_tags_list">
     <div style="text-align:right" tal:repeat="m minus_tags">
       <a class="cc_tag_link" rel="nofollow" href="${base_tag_url}/${m/tag}">${m/tag}</a> <b>[<a href="${m/url}"> - </a>]</b>
     </div>
     <hr />
     <div style="text-align:right" tal:repeat="t all_tags">
       <a class="cc_tag_link" rel="nofollow" href="${base_tag_url}/${t}" tal:content="php: CC_strchop('${t}',12)"></a> <b>[<a href="${base_addtag_url}${t}"> + </a>]</b>
     </div>
   </div>
</metal:block>

<metal:block define-macro="tags">
    <div class="cc_tag_switch_link">${tag_switch_link}</div>
    <tal:block repeat="tag tag_array" >
       <span class="cc_tag_count">
       <a href="${tag/tagurl}" rel="nofollow tag" class="cc_tag_link" 
          style="line-height:110%;font-size:${tag/fontsize}px">${tag/tags_tag}</a> (${tag/tags_count})</span><tal:block
              condition="not: repeat/tag/end" >, </tal:block>
    </tal:block>
    <p class="cc_tag_bottom">&nbsp;</p>
</metal:block>

</tal:block>