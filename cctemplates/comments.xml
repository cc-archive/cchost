<metal:block define-macro="comment_thread">
    <div id="cc_comment_thread" class="cc_comment_thread" style="width:75%;"></div>
    <script  language="JavaScript" type="text/javascript" >
       cc_get_data("${record/comment_thread_url}","cc_comment_thread","getting data..."); 
    </script>
</metal:block>

<metal:block define-macro="comment_thread_list">
  <div class="cc_box" style="width:100%">
    <h3 tal:content="php: CC_lang('Most recent reviews...')" />
    <table class="cc_posts_container" style="width:100%">
      <tr tal:repeat="post posts">
         <th>${post/username}</th>
         <td class="cc_post_date">${post/post_date_format}</td>
         <tal:block define="ptext php: CC_strchop('${post/post_text}',50)" />
         <td class="cc_post_text"><a href="${post/post_url}">${ptext}</a></td>
      </tr>
    </table>
    <br />
    <table align="center"><tr>
        <td tal:condition="reply_topic_url">
        <a class="cc_gen_button" href="${reply_topic_url}"><span tal:content="php: CC_lang('Write Review')" /></a>
      </td>
      <td>
        <a class="cc_gen_button" href="${view_topic_url}"><span tal:content="php: CC_lang('Read all...')" /></a>
        </td>
     </tr></table>
  </div>
</metal:block>

</tal:block>