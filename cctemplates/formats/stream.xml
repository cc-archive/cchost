<div id="cc_list">
<tal:block define="by php:_('by');" /> 
<div tal:repeat="R records">
  <span tal:condition="R/stream_link">
    <a href="${R/stream_link/url}" class="cc_streamlink">&nbsp;</a> 
  </span>
  <tal:block define="upname php: CC_strchop('${R/upload_name}',${chop},${dochop});" />
  <tal:block define="user   php: CC_strchop('${R/user_real_name}',${chop},${dochop});" />
  <a href="${R/file_page_url}"   class="cc_file_link">${upname}</a> ${by} 
  <a class="cc_user_link" href="${R/artist_page_url}" >${user}</a>
</div>
<i class="cc_tagline">
    <tal:block define="format_signature format_sig | string:format_signature.xml/signature" />
    <metal:block use-macro="${format_signature}" /></i>
</div>
