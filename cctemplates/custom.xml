<metal:block define-macro="_UBeenRemixed_admin_only">
   <tal:block define="ubeenargs php: CC_pending_pool_remix()" />
   <h2 tal:condition="ubeenargs" ><a href="${ubeenargs/url}">${ubeenargs/message}</a></h2>
</metal:block>

<metal:block define-macro="Podcast_and_Stream_Links">
<p tal:condition="upload_ids">
<div class="cc_podcast_link"><a href="${home-url}podcast/page?ids=${upload_ids}"><span tal:content="php: CC_lang('PODCAST this page')" /></a></div>
<div class="cc_podcast_link" tal:condition="artist_page"><a href="${home-url}podcast/artist/${artist_page}"><span>PODCAST ${artist_page}</span></a></div>
<div class="cc_stream_page_link" tal:condition="can_stream_page"><a href="${home-url}stream/page/playlist.m3u?ids=${upload_ids}"><span tal:content="php: CC_lang('STREAM this page')" /></a></div>
</p>
</metal:block>

<metal:block define-macro="List_Contests">
  <p tal:content="php: CC_Lang('Open Contests')" />
  <ul>
    <li tal:repeat="item php: CC_query('CCContests','GetOpenContests')">
      <a href="${item/contest_url}" class="cc_contest_open">${item/contest_friendly_name}</a>
    </li>
  </ul>
</metal:block>

<metal:block define-macro="Virtual_Roots">
  <p tal:content="php: CC_lang('Mini Sites');" />
  <ul>
    <li tal:repeat="item php: CC_get_config_roots()">
      <a href="${item/url}">${item/scope_name}</a>
    </li>
  </ul>
</metal:block>

<metal:block define-macro="Search_Box">
  <form action="${home-url}search/results" method="get" >
    <div>
      <input class="cc_search_edit" name="search_text" value="search text" />
      <input type="hidden" name="search_type" value="any" />
      <input type="hidden" name="search_in" value="3" />
      <input type="submit" value="Search" />
      <tal:block condition="advanced_search_url"><a href="${advanced_search_url}" tal:content="php: CC_lang('Advanced')"></a></tal:block>
    </div>
  </form>
</metal:block>

<metal:block define-macro="Ratings_Chart">
    <p tal:content="php: CC_lang('Highest Rated')" />
    <tal:block define="chart php: CC_ratings_chart(7)" />
    <ul condition="chart">
        <li tal:repeat="item chart"><a href="${item/file_page_url}" >${item/upload_short_name}</a></li>
    </ul>
    <p tal:condition="not: chart" tal:content="php: CC_lang('No Chart')" />
</metal:block>

<metal:block define-macro="Editorial_Picks">
    <tal:block define="latest_title php: CC_lang('Editors Picks')" />
    <tal:block define="latest_tag  string:editorial_pick" />
    <metal:block use-macro="custom.xml/_query_latest" />
    <a href="${home-url}editorial/picks" class="cc_more_menu_link" tal:content="php: CC_Lang('See all picks...')" />
</metal:block>

<metal:block define-macro="Latest_Uploads">
    <tal:block define="latest_title php: CC_lang('New Uploads')" />
    <tal:block define="latest_tag  string:" />
    <metal:block use-macro="custom.xml/_query_latest" />
</metal:block>

<metal:block define-macro="Latest_Remixes">
    <tal:block define="latest_title php: CC_lang('New Remixes')" />
    <tal:block define="latest_tag  string:remix" />
    <metal:block use-macro="custom.xml/_query_latest" />
</metal:block>

<metal:block define-macro="_query_latest">
  <p tal:content="latest_title" />
  <tal:block define="qrecords php: CC_cache_query('$latest_tag','all','upload_date','DESC',5);" />
  <ul tal:condition="qrecords">
    <li tal:repeat="qrecord qrecords"><a href="${qrecord/file_page_url}">${qrecord/upload_short_name}</a></li>
  </ul>
</metal:block>

<metal:block define-macro="Recent_Reviews">
  <tal:block define="reviews php: CC_recent_reviews();" />
  <p tal:content="php: CC_lang('Recent Reviewers');" />
  <ul condition="reviews">
     <li tal:repeat="rev reviews"><a href="${rev/topic_permalink}" 
          tal:content="php: CC_strchop('${rev/user_real_name}',12);" /></li>
  </ul>
  <a href="${home-url}reviews" class="cc_more_menu_link" tal:content="php: CC_Lang('More reviews...')" />    
</metal:block>

</tal:block>