<title>${channel_title}</title>
<creator>${root-url}</creator>
<annotation>${channel_description}</annotation>
<info>${channel_description}</info>
<location>${raw_feed_url}</location>
<date>${rss-pub-date}</date>

<trackList>
    <track tal:condition="feed_items" tal:repeat="item feed_items">
        <location>${item/files/0/download_url}</location>
        <identifier>${item/upload_id}</identifier>
        <title>${item/upload_name}</title>
        <creator>${item/user_name}</creator>
        <duration>${item/files/0/file_rawsize}</duration>
        <meta rel="${item/license_url}">${item/license_url}</meta>
        <image tal:condition="item/user_avatar_url">${item/user_avatar_url}</image>        
        <image tal:condition="not: item/user_avatar_url">${root-url}ccimages/person.png</image>        
        <tal:block replace="">
        <image>http://www.simuze.nl/live/media/avatar/955cb567b6e38f4c6b3f28cc857fc38c/avatar40x30.jpg</image>
        <!-- This is for specific needs of simuze to identify the diff. requirements
        for licenses -->
        <extension application="http://www.simuze.nl">
        <cclicense_by>1</cclicense_by>
        <cclicense_commercial>0</cclicense_commercial>
        <cclicense_derative>1</cclicense_derative>
        </extension>
        </tal:block>
    </track>
</trackList>
</playlist>
